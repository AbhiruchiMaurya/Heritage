<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.abhiruchimaurya.heritage.addmonument">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:background="@drawable/addmonu"
    android:orientation="vertical"
    >
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a Monument"
        android:textSize="20dp"

        android:textStyle="bold"

        android:layout_gravity="center"

        android:textColor="#000000"/>


    <LinearLayout

        android:layout_marginTop="10dp"

        android:layout_width="match_parent"


        android:layout_height="wrap_content"

        android:orientation="horizontal">




        <TextView

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="Name :"

            android:textSize="20dp"

            android:id="@+id/textView"

            android:textColor="#000000"/>



        <EditText

            android:layout_marginLeft="5dp"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:hint="Name of the monument"

            android:textStyle="italic"

            android:textColor="#000000"

            android:textSize="20dp"

            android:id="@+id/etname"


            />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City :   "
            android:textSize="20dp"
            android:textColor="#000000"/>
        <!--<EditText-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:hint="Name of the city"-->
            <!--android:textStyle="italic"-->
            <!--android:textColor="#000000"-->
            <!--android:textSize="20dp"-->
            <!--android:id="@+id/etcity"-->


            <!--/>-->
        <Spinner
            android:id="@+id/etcity"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"

            android:textColor="#000000"


            />

    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="10dp"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:orientation="horizontal">


        <TextView


            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="Creator's Name :"

            android:textSize="20dp"


            android:textColor="#000000"/>



        <EditText

            android:layout_marginLeft="5dp"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:hint="Who built this monument"

            android:textStyle="italic"

            android:textColor="#000000"

            android:textSize="20dp"
            android:id="@+id/etcreator"

            />



    </LinearLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout

        android:layout_marginTop="10dp"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:orientation="horizontal">


        <TextView

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="Description :"


            android:textSize="20dp"

            android:inputType="textMultiLine"

            android:textColor="#000000"/>


        <EditText

            android:layout_marginLeft="5dp"

            android:layout_width="match_parent"


            android:layout_height="wrap_content"

            android:hint="Something about the monument"

            android:textStyle="italic"

            android:textColor="#000000"

            android:textSize="20dp"
            android:id="@+id/etdescription"

            />


    </LinearLayout>
    </ScrollView>

    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:orientation="horizontal"

        android:layout_marginTop="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photo :"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:textSize="20dp"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:id="@+id/imageView"
            android:src="@drawable/cam"
            android:onClick="cam"

            />
        <ImageView
            android:layout_width="90dp"
            android:layout_marginLeft="5dp"
            android:layout_height="60dp"
            android:id="@+id/imageView2"
            android:src="@drawable/gal"
            android:onClick="gallery"
            />
        <ImageView

            android:layout_width="90dp"

            android:layout_height="80dp"

            android:background="#000000"
            android:id="@+id/iv"


            />


    </LinearLayout>

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#5d4037"
        android:text="ADD"
        android:textSize="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/add"
        android:onClick="add"
        />






</LinearLayout>
</ScrollView>