<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.abhiruchimaurya.heritage.Admin">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:orientation="vertical"
    android:background="@drawable/admin"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Admin"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:textStyle="italic"
        />

    <LinearLayout

        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="175dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:alpha="0.9"
            android:text="Add a City"
            android:textSize="25dp"
            android:textStyle="italic"
            android:background="#f44336"
            android:textColor="#ffffff"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_weight="0"
            android:onClick="addCity"

            />

        <Button
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:alpha="0.9"
            android:text="Add a Monument"
            android:textSize="25dp"
            android:textStyle="italic"
            android:background="#33691e"
            android:textColor="#ffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="7"
            android:onClick="addMonu"

            />
    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:alpha="0.9"
            android:text="Update a Monument"
            android:textSize="25dp"
            android:textStyle="italic"
            android:background="#1976d2"
            android:textColor="#ffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="1"
            android:onClick="updateMonu"

            />

        <Button
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:alpha="0.9"
            android:text="Delete a Monument"
            android:textSize="25dp"
            android:textStyle="italic"
            android:background="#757575"
            android:textColor="#ffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="1"
            android:onClick="deleteMonu"

            />
    </LinearLayout>

</LinearLayout>
</ScrollView>